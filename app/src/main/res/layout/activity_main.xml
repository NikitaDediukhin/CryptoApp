<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.MainActivity">

    <android.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="">

        <LinearLayout
            android:id="@+id/toolbarDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/ivBackButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@color/white"
                android:contentDescription="@string/button_back"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/tvToolbarDescriptionTitle"
                style="@style/H6_Roboto_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                tools:text="@string/bitcoin"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainTools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvToolbarMarketTitle"
                style="@style/H6_Roboto_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/crypto_list" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="13dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipUsd"
                    style="@style/CustomChipStyle"
                    android:text="@string/usd"
                    android:textColor="@color/brightOrange"
                    app:chipBackgroundColor="@color/lightBeige" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRub"
                    style="@style/CustomChipStyle"
                    android:text="@string/rub"
                    android:textColor="@color/blackTransparent87"
                    app:chipBackgroundColor="@color/blackTransparent12" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

    </android.widget.Toolbar>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/navHostFragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/orange"
            android:visibility="gone" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>