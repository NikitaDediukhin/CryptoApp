<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/crypto_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_crypto"
        android:contentDescription="@string/crypto_logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/crypto_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:lineHeight="18.75sp"
            android:text="@string/bitcoin"
            android:textColor="@android:color/black"
            android:textFontWeight="500"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/crypto_ticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/roboto_medium"
            android:lineHeight="16.41sp"
            android:text="@string/btc"
            android:textColor="@android:color/darker_gray"
            android:textFontWeight="400"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/crypto_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:lineHeight="18.75sp"
            android:text="@string/_28_600_74"
            android:textColor="@android:color/black"
            android:textFontWeight="600"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/crypto_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/roboto_medium"
            android:lineHeight="16.41sp"
            android:text="@string/_4_05"
            android:textColor="@color/teal"
            android:textFontWeight="400"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
